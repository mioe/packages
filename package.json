{
	"name": "@mioe/packages",
	"author": "mioe <mioe.galaxy@gmail.com> (https://github.com/mioe/)",
	"version": "0.0.7",
	"license": "MIT",
	"files": [
		"dist",
		"dist-types",
		"LICENSE",
		"README.md"
	],
	"main": "./dist/packages.umd.js",
	"module": "./dist/packages.es.js",
	"typings": "./dist-types/main.d.ts",
	"exports": {
		".": {
			"import": "./dist/packages.es.js",
			"require": "./dist/packages.umd.js"
		},
		"./style.css": "./dist/style.css"
	},
	"engines": {
		"node": ">=16",
		"pnpm": ">=6"
	},
	"scripts": {
		"dev": "vitepress dev docs --port 3333 --host",
		"build": "vitepress build docs",
		"typecheck": "vue-tsc --noEmit",
		"lint": "eslint --ext .js,.vue,.ts,.mjs,.mts --ignore-path .gitignore --fix src docs",
		"pub": "vue-tsc --declaration --emitDeclarationOnly && vite build && pnpm publish",
		"deploy": "vitepress build docs && firebase deploy"
	},
	"dependencies": {
		"@vueuse/core": "^8.5.0",
		"pinia": "^2.0.14",
		"vue": "^3.2.36",
		"vue-starport": "^0.2.11"
	},
	"devDependencies": {
		"@iconify/json": "^2.1.53",
		"@mioe/eslint-config": "^0.1.1",
		"@types/node": "^17.0.36",
		"@vitejs/plugin-vue": "^2.3.3",
		"eslint": "^8.16.0",
		"sass": "^1.52.1",
		"typescript": "^4.7.2",
		"unplugin-icons": "^0.14.3",
		"unplugin-vue-components": "^0.19.6",
		"vite": "^2.9.9",
		"vite-plugin-windicss": "^1.8.4",
		"vitepress": "^0.22.4",
		"vue-tsc": "^0.35.0",
		"windicss": "^3.5.4"
	}
}
