{
	"name": "@mioe/packages",
	"author": "mioe <mioe.galaxy@gmail.com> (https://github.com/mioe/)",
	"version": "0.0.6",
	"license": "MIT",
	"files": [
		"dist",
		"dist-types",
		"LICENSE",
		"README.md"
	],
	"main": "./dist/packages.umd.js",
	"module": "./dist/packages.es.js",
	"typings": "./dist-types/main.d.ts",
	"exports": {
		".": {
			"import": "./dist/packages.es.js",
			"require": "./dist/packages.umd.js"
		},
		"./style.css": "./dist/style.css"
	},
	"engines": {
		"node": ">=16",
		"pnpm": ">=6"
	},
	"scripts": {
		"dev": "vitepress dev docs --port 3333 --host",
		"build": "vitepress build docs",
		"typecheck": "vue-tsc --noEmit",
		"lint": "eslint --ext .js,.vue,.ts,.mjs,.mts --ignore-path .gitignore --fix src docs",
		"pub": "vue-tsc --declaration --emitDeclarationOnly && vite build && pnpm publish",
		"deploy": "firebase deploy"
	},
	"dependencies": {
		"vue": "^3.2.33"
	},
	"devDependencies": {
		"@mioe/eslint-config": "^0.1.0",
		"@types/node": "^17.0.29",
		"@vitejs/plugin-vue": "^2.3.1",
		"eslint": "^8.14.0",
		"sass": "^1.51.0",
		"typescript": "^4.6.3",
		"vite": "^2.9.6",
		"vite-plugin-windicss": "^1.8.4",
		"vitepress": "^0.22.3",
		"vue-tsc": "^0.29.8",
		"windicss": "^3.5.1"
	}
}
